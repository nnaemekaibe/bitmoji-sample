<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/fonts</item>
    </style>

    <style name="MyBitmojiTheme" parent="SnapKitBitmojiFragment.Light">
        <!-- Update the theme with customized values here -->
    </style>

    <style name="HeaderBarBase">
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="HeaderBar" parent="HeaderBarBase">
    </style>
</resources>
